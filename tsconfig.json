{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "target": "ES6",
        "resolveJsonModule": true,
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "test",
        "deploy",
        "**/*.spec.ts",
        "build"
    ]
}